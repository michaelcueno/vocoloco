@(conv_mesg: List[(Message, User)], conv_id: Long)

<conversation>
	<messages> 
		@conv_mesg.map { cm =>
			<message>
				<conv_id>@conv_id</conv_id>
				<sender>@cm._2.username</sender>
				<userpic>@cm._2.url</userpic>
				<mesg_id>@cm._1.id</mesg_id>
				<message>@cm._1.message</message>
				<date>@cm._1.date</date>
			</message>
		}
	</messages>
</conversation>